{
    "name": "Combat Agent Dev",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/sshd:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "ms-dotnettools.csdevkit",
                "w88975.code-translate",
                "github.copilot",
                "mechatroner.rainbow-csv"
            ],
            "settings": {
                "[python]": {
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.formatOnSave": true
                }
            }
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder}/../game,target=/mnt/game,type=bind,consistency=cached"
    ],
    "runArgs": [
        "--gpus",
        "all"
    ],
    "postCreateCommand": "bash .devcontainer/init-mod.sh",
    "postAttachCommand": "bash .devcontainer/git.sh && bash .devcontainer/safe.sh"
}